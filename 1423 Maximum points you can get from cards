class Solution(object):
    def maxScore(self, cardPoints, k):
        total = sum(cardPoints)
        window_size = n - k
        min_subarray_sum = sum(cardPoints[:window_size])
        current_subarray_sum = min_subarray_sum
        
        for i in range(window_size, n):
            current_subarray_sum += cardPoints[i] - cardPoints[i - window_size]
            min_subarray_sum = min(min_subarray_sum, current_subarray_sum)
        
        return total - min_subarray_sum
